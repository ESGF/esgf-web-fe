.mf-dialog-text {
    margin-top: 17px;
}

.mf-dialog-text-information {
    font-style: italic;
}

.mf-dialog-text-help {
    font-style: italic;
}

.mf-dialog-text-confirmation {
    font-style: italic;
}

.mf-dialog-text-warning {
    font-style: bold;
}

.mf-dialog-text-error {
