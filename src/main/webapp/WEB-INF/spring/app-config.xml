<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
		
    <!-- Configurable properties -->
	<bean id="searchPropertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="/WEB-INF/spring/application.properties" />
	</bean>	

	<!-- Scans the classpath of this application for @Components to deploy as beans -->
	<!-- search back-end -->
	<context:component-scan base-package="esg.search.query"/>
	<!-- web front-end -->
	<context:component-scan base-package="org.esgf.web" />
	

	<!-- Application Message Bundle -->
	<bean id="messageSource" 
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="/WEB-INF/messages/messages" />
		<property name="cacheSeconds" value="0" />
	</bean>

    
	<!-- Configures Spring MVC -->
	<import resource="mvc-config.xml" />
	<import resource="facet-config.xml" />
    <import resource="service-config.xml" />
    
</beans>
