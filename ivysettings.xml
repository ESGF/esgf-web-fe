<ivysettings>
  <settings defaultResolver="default"/>
  
  <property name="spring.version" value="3.0.5.RELEASE" />
  <property name="ivy.esgf.default.root.url" 
    value="http://esgf.org/ivy/esgf_repository" override="false"/>


  <resolvers>
  
    <url name="esgf" checksums="md5">
      <ivy pattern="${ivy.esgf.default.root.url}/[organisation]/[module]/[revision]/ivy-[revision].xml" />
      <artifact pattern="${ivy.esgf.default.root.url}/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
      <artifact pattern="${ivy.esgf.default.root.url}/[organisation]/[module]/[revision]/[artifact].[revision].[ext]" />
      <artifact pattern="${ivy.esgf.default.root.url}/[organisation]/[module]/[revision]/[artifact].[ext]" />
    </url>
 
    <ibiblio name="artifactory" m2compatible="true" 
    root="http://esg-gw.ornl.teragrid.org:8088/artifactory/libs-releases"/>
  
    <ibiblio name="public" m2compatible="true"/>
   
    </resolvers>

  <resolvers>
    <chain name="default" returnFirst="true">
      <resolver ref="esgf" />
      <resolver ref="artifactory" />
      <resolver ref="public" />
    </chain>
  </resolvers>
        
</ivysettings>

